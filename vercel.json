{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/public/sitemap.xml" },
    { "source": "/robots.txt", "destination": "/public/robots.txt" },
    { "source": "/google41010c2a47b3ce33.html", "destination": "/public/google41010c2a47b3ce33.html" },
    { "source": "/api/(.*)", "destination": "/api/ai-forecast.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}