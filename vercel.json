{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/ai-forecast.js"
    },
    {
      "source": "/(?!sitemap\\.xml$|robots\\.txt$)(.*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        }
      ]
    }
  ]
}
